<% include partials/header %>

<div class='container'>
    <header class='jumbotron'>
        <div class='container'>
            <h1>Welcome to FoodTracker!</h1>
            <p><a class='btn btn-primary btn-large' href='/meals/new'>Add New Meal</a></p>
        </div>
    </header>

    <div class='row text-center' style='display:flex; flex-wrap: wrap''>
    <% meals.forEach(function(meal){ %>
    <div class='col-md-3 col-sm-6'>
        <div class='thumbnail'>
            <img src="<%= meal.image %>">
            <div class='caption'>
                <h4><%= meal.name %></h4>
                <h4>Calories: <%= meal.calorie %></h4>
            </div>
            <p>
                <a href='/meals/<%= meal._id %>' class='btn btn-primary'>More Info</a>
            </p>
        </div>
    </div>
    <% }); %>
    </div>
</div>

<% include partials/footer %>